{
  "name": "socialsignin/webhook-sample-client",
  "description": "Example client for webhook-service",
  "require": {
    "php": ">=7.0",
    "ext-curl": "*",
    "slim/twig-view": "^2.2",
    "slim/slim": "^3.6",
    "psr/log": "^1.0.2",
    "monolog/monolog": "^1.22.1"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*",
    "mockery/mockery": "dev-master",
    "jakub-onderka/php-parallel-lint": "^0.9.2"
  },
  "authors": [
    {
      "name": "SocialSignIn Technical",
      "email": "technical@socialsignin.co.uk"
    }
  ],
  "autoload": {
    "psr-4": {
      "SocialSignIn\\WebhookClient\\": "src"
    }
  },
  "scripts": {
    "lint":    "@php vendor/bin/parallel-lint --exclude vendor .",
    "phpunit": "@php vendor/bin/phpunit",
    "test": [
      "@lint",
      "@phpunit"
    ]
  }
}
